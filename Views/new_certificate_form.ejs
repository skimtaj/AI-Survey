    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.0.1/css/buttons.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.dataTables.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        }

        :root {
            --primaryColor: #2a4365;
            --primaryLight: #6366F1;
            --primaryLighter: #818CF8;
            --primaryDark: #4338CA;
            --secondaryColor: #10B981;
            --dangerColor: #EF4444;
            --warningColor: #F59E0B;
            --infoColor: #3B82F6;
            --whiteColor: #FFFFFF;
            --lightGray: #F9FAFB;
            --mediumGray: #E5E7EB;
            --darkGray: #6B7280;
            --textColor: #111827;
            --borderColor: #D1D5DB;
            --smallBorder: 8px;
            --mediumBorder: 12px;
            --bigBorder: 16px;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            --fs13: 0.8125rem;
            --fs14: 0.875rem;
            --fs15: 0.9375rem;
            --fs16: 1rem;
            --fs18: 1.125rem;
            --fs20: 1.25rem;
            --fs24: 1.5rem;
            --fs30: 1.875rem;
            --fs36: 2.25rem;
            --sidebarWidth: 280px;
            --headerHeight: 70px;
        }

        html {
            font-size: 16px;
            scroll-behavior: smooth;
        }

        body {
            position: relative;
            color: var(--textColor);
            background-color: var(--lightGray);
            min-height: 100vh;
            overflow-x: hidden;
            line-height: 1.5;
        }

        h1,
        h2,
        h3,
        h4,
        h5,
        h6 {
            line-height: 1.3;
            font-weight: 600;
            color: var(--textColor);
        }

        ul {
            list-style: none;
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        ::-webkit-scrollbar {
            width: 6px;
            height: 6px;
        }

        ::-webkit-scrollbar-track {
            background-color: var(--lightGray);
        }

        ::-webkit-scrollbar-thumb {
            background-color: var(--primaryLight);
            border-radius: 3px;
        }

        .container {
            width: 100%;
            height: 100%;
            position: relative;
            padding: 1.5rem;
        }

        .main {
            display: grid;
            gap: 1.5rem;
            width: 100%;
        }

        .main .box {
            padding: 1.5rem;
            background-color: var(--whiteColor);
            border-radius: var(--mediumBorder);
            box-shadow: var(--shadow);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            width: 100%;
        }

        .box-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .box-title {
            font-size: var(--fs18);
            font-weight: 600;
            color: var(--textColor);
        }

        .box-actions {
            display: flex;
            gap: 0.5rem;
        }

        .box-action-btn {
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: var(--smallBorder);
            background-color: var(--lightGray);
            color: var(--darkGray);
            transition: all 0.2s ease;
            cursor: pointer;
            font-size: var(--fs14);
        }

        .box-action-btn:hover {
            background-color: var(--mediumGray);
            color: var(--textColor);
        }





        .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            width: 18px;
            height: 18px;
            background-color: var(--dangerColor);
            color: white;
            border-radius: 50%;
            font-size: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }

        .tooltip-inner {
            font-size: var(--fs13);
            padding: 0.375rem 0.75rem;
            background-color: var(--textColor);
        }

        .bs-tooltip-auto[data-popper-placement^=top] .tooltip-arrow::before,
        .bs-tooltip-top .tooltip-arrow::before {
            border-top-color: var(--textColor);
        }

        .register-container {
            background-color: var(--whiteColor);
            border-radius: var(--mediumBorder);
            box-shadow: var(--shadow-md);
            max-width: 100%;
            margin: 1.5rem 0;
            overflow: hidden;
            margin-top: -350px;
        }

        .form-header {
            background: #263849;
            color: var(--whiteColor);
            padding: 1.5rem;
            text-align: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .form-header h2 {
            font-weight: 600;
            margin: 0;
            font-size: var(--fs24);
            letter-spacing: 0.5px;
            color: white;
        }

        .form-header p {
            margin: 8px 0 0;
            font-size: var(--fs14);
            opacity: 0.9;
        }

        .progress-container {
            padding: 1rem 1.5rem;
            background-color: var(--lightGray);
            border-bottom: 1px solid var(--borderColor);
        }

        .progress-steps {
            display: flex;
            justify-content: space-between;
            position: relative;
        }

        .progress-steps:before {
            content: '';
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 2px;
            background-color: var(--mediumGray);
            transform: translateY(-50%);
            z-index: 1;
        }

        .progress-bar {
            position: absolute;
            top: 50%;
            left: 0;
            height: 2px;
            background: var(--secondaryColor);
            transform: translateY(-50%);
            transition: width 0.3s ease;
            z-index: 2;
        }

        .step {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background-color: var(--mediumGray);
            color: var(--darkGray);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            z-index: 3;
            font-weight: 600;
            font-size: var(--fs14);
            transition: all 0.3s ease;
        }

        .step.active {
            background: var(--secondaryColor);
            color: var(--whiteColor);
        }

        .step.completed {
            background-color: var(--secondaryColor);
            color: var(--whiteColor);
        }

        .step-label {
            position: absolute;
            top: 42px;
            left: 50%;
            transform: translateX(-50%);
            font-size: var(--fs13);
            font-weight: 500;
            color: var(--darkGray);
            white-space: nowrap;
        }

        .step.active .step-label,
        .step.completed .step-label {
            color: var(--primaryColor);
            font-weight: 600;
        }

        .form-section {
            padding: 1.5rem;
            display: none;
        }

        .form-section.active {
            display: block;
        }

        .section-title {
            color: var(--primaryColor);
            font-weight: 600;
            margin-bottom: 1.5rem;
            padding-bottom: 0.75rem;
            border-bottom: 1px solid var(--borderColor);
            font-size: var(--fs18);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .form-control {
            border-radius: var(--smallBorder);
            padding: 0.625rem 1rem;
            border: 1px solid var(--borderColor);
            transition: all 0.3s;
            font-size: var(--fs14);
            height: calc(1.5em + 0.75rem + 2px);
        }

        .form-control:focus {
            border-color: var(--primaryLight);
            box-shadow: 0 0 0 0.2rem rgba(99, 102, 241, 0.25);
        }

        .form-group label {
            font-weight: 500;
            color: var(--darkGray);
            margin-bottom: 0.5rem;
            font-size: var(--fs14);
        }

        .btn-container {
            display: flex;
            justify-content: space-between;
            padding: 1rem 1.5rem;
            background-color: var(--lightGray);
            border-top: 1px solid var(--borderColor);
        }

        .btn {
            border-radius: var(--smallBorder);
            padding: 0.625rem 1.25rem;
            font-weight: 600;
            transition: all 0.3s;
            font-size: var(--fs14);
        }

        .btn-next {
            background: var(--secondaryColor);
            color: var(--whiteColor);
            border: none;
        }

        .btn-next:hover {
            background: #0e9f72;
            transform: translateY(-1px);
            box-shadow: var(--shadow-sm);
        }

        .btn-prev {
            background-color: var(--whiteColor);
            color: var(--primaryColor);
            border: 1px solid var(--borderColor);
        }

        .btn-prev:hover {
            background-color: var(--lightGray);
        }

        .btn-submit {
            background-color: var(--primaryColor);
            color: var(--whiteColor);
            border: none;
        }

        .btn-submit:hover {
            background-color: var(--primaryDark);
            transform: translateY(-1px);
            box-shadow: var(--shadow-sm);
        }

        .back-link {
            color: var(--primaryColor);
            font-weight: 500;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            font-size: var(--fs14);
        }

        .back-link i {
            margin-right: 0.5rem;
            font-size: var(--fs13);
        }

        .witness-section {
            margin-top: 1.5rem;
            padding-top: 1rem;
            border-top: 1px dashed var(--borderColor);
        }

        .upload-section {
            margin-top: 1.5rem;
            padding: 1rem;
            background-color: var(--lightGray);
            border-radius: var(--smallBorder);
            border: 1px dashed var(--borderColor);
        }

        .upload-section label {
            font-weight: 600;
            color: var(--primaryColor);
            margin-bottom: 0.5rem;
            display: block;
        }

        .custom-file-label::after {
            content: "Browse";
            background-color: var(--mediumGray);
            color: var(--textColor);
            border-left: 1px solid var(--borderColor);
            border-radius: 0 var(--smallBorder) var(--smallBorder) 0;
        }

        .is-invalid {
            border-color: var(--dangerColor) !important;
        }

        .invalid-feedback {
            color: var(--dangerColor);
            font-size: var(--fs13);
            margin-top: 0.25rem;
        }

        .file-info {
            font-size: var(--fs13);
            color: var(--darkGray);
            margin-top: 0.5rem;
            display: none;
        }


        @media(max-width : 576px) {

            .register-container {
                background-color: var(--whiteColor);
                border-radius: var(--mediumBorder);
                box-shadow: var(--shadow-md);
                max-width: 100%;
                margin: 1.5rem 0;
                overflow: hidden;
            }

        }

        @media (min-width: 768px) {



            .main {
                grid-template-columns: repeat(2, 1fr);
                gap: 1.5rem;
            }

            .welcome-box {
                grid-column: span 2;
            }

            .data-table-section {
                grid-column: span 2;
            }
        }

        @media (min-width: 992px) {
            .container {
                padding: 2rem;
            }

            .main {
                grid-template-columns: repeat(12, 1fr);
                grid-auto-rows: minmax(150px, auto);
                gap: 1.5rem;
            }

            .welcome-box {
                grid-column: span 12;
                grid-row: 1;
            }

            .data-table-section {
                grid-column: span 12;
                grid-row: 2;
            }

            .register-container {
                grid-column: span 12;
                grid-row: 3;
            }

            .welcome-box::before {
                width: 300px;
                height: 300px;
                top: -100px;
                right: -100px;
            }

            .welcome-box::after {
                width: 400px;
                height: 400px;
                bottom: -150px;
                right: -150px;
            }
        }

        @media (min-width: 1200px) {
            .container {
                max-width: 1400px;
                margin: 0 auto;
            }
        }

        @media (max-width: 575.98px) {
            html {
                font-size: 14px;
            }

            .container {
                padding: 1rem;
            }

            .main {
                display: flex;
                flex-direction: column;
                gap: 1rem;
            }





            .step-label {
                display: none;
            }

            .form-section {
                padding: 1rem;
            }

            .section-title {
                font-size: var(--fs16);
            }

            .btn-container {
                flex-wrap: wrap;
                gap: 0.5rem;
            }

            .btn-container .btn,
            .btn-container .back-link {
                width: 100%;
                text-align: center;
                justify-content: center;
            }
        }

        .fade-in {
            animation: fadeIn 0.5s ease-in-out;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

