            $(document).ready(function () {
                // Initialize DataTable with responsive settings
                $('#programsTable').DataTable({
                    responsive: true,
                    paging: true,
                    searching: true,
                    info: true,
                    autoWidth: false,
                    lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
                    dom: '<"top"lf>rt<"bottom"ip>',
                    language: {
                        search: "_INPUT_",
                        searchPlaceholder: "Search programs...",
                        lengthMenu: "Show _MENU_ entries",
                        info: "Showing _START_ to _END_ of _TOTAL_ entries",
                        infoEmpty: "Showing 0 to 0 of 0 entries",
                        infoFiltered: "(filtered from _MAX_ total entries)",
                        paginate: {
                            first: "First",
                            last: "Last",
                            next: "Next",
                            previous: "Previous"
                        }
                    }
                });

                // Initialize tooltips
                $('[data-toggle="tooltip"]').tooltip();

                // Show/hide scroll to top button
                $(window).scroll(function () {
                    if ($(this).scrollTop() > 300) {
                        $('.scroll-top').addClass('active');
                    } else {
                        $('.scroll-top').removeClass('active');
                    }
                });

                // Smooth scroll to top
                $('.scroll-top').click(function () {
                    $('html, body').animate({ scrollTop: 0 }, 300);
                    return false;
                });

                // Marriage Form Functionality
                let currentSection = 1;
                const totalSections = 3;

                // Initialize form
                updateFormDisplay();

                // Next button click handler
                $('#nextBtn').click(function () {
                    if (validateSection(currentSection)) {
                        currentSection++;
                        updateFormDisplay();
                    }
                });

                // Previous button click handler
                $('#prevBtn').click(function () {
                    currentSection--;
                    updateFormDisplay();
                });

                // Validate current section
                function validateSection(sectionNum) {
                    let isValid = true;

                    // Validate all required fields in current section
                    $(`#section${sectionNum} [required]`).each(function () {
                        if ($(this).is(':checkbox')) {
                            if (!$(this).is(':checked')) {
                                $(this).addClass('is-invalid');
                                isValid = false;
                            } else {
                                $(this).removeClass('is-invalid');
                            }
                        } else if (!$(this).val()) {
                            $(this).addClass('is-invalid');
                            isValid = false;
                        } else {
                            $(this).removeClass('is-invalid');
                        }
                    });

                    if (!isValid) {
                        $(`#section${sectionNum}`).animate({ scrollTop: 0 }, 'fast');
                    }

                    return isValid;
                }

                // Update form display based on current section
                function updateFormDisplay() {
                    // Hide all sections
                    $('.form-section').removeClass('active');

                    // Show current section
                    $(`#section${currentSection}`).addClass('active');

                    // Update progress bar and steps
                    const progressPercent = ((currentSection - 1) / (totalSections - 1)) * 100;
                    $('.progress-bar').css('width', progressPercent + '%');

                    // Update step indicators
                    $('.step').removeClass('active completed');
                    for (let i = 1; i <= totalSections; i++) {
                        if (i < currentSection) {
                            $(`#step${i}`).addClass('completed');
                        } else if (i === currentSection) {
                            $(`#step${i}`).addClass('active');
                        }
                    }

                    // Update button visibility
                    if (currentSection === 1) {
                        $('#prevBtn').hide();
                        $('#nextBtn').show();
                        $('#submitBtn').hide();
                    } else if (currentSection === totalSections) {
                        $('#prevBtn').show();
                        $('#nextBtn').hide();
                        $('#submitBtn').show();
                    } else {
                        $('#prevBtn').show();
                        $('#nextBtn').show();
                        $('#submitBtn').hide();
                    }
                }

                // Remove validation error when user starts typing
                $('.form-control').on('input', function () {
                    if ($(this).val()) {
                        $(this).removeClass('is-invalid');
                    }
                });

                // Remove validation error when checkbox is checked
                $('#confirmCheck').change(function () {
                    if ($(this).is(':checked')) {
                        $(this).removeClass('is-invalid');
                    }
                });

                // File upload functionality - show filename only
                $('.custom-file-input').change(function () {
                    const input = $(this);
                    const fileName = input[0].files[0] ? input[0].files[0].name : "No file chosen";
                    const infoId = input.attr('id') + 'Info';

                    // Check file size (max 2MB)
                    if (input[0].files[0] && input[0].files[0].size > 2 * 1024 * 1024) {
                        input.addClass('is-invalid');
                        input.next('.invalid-feedback').text('File size exceeds 2MB limit');
                        return;
                    }

                    // Check file type for images
                    if (input.attr('accept') === 'image/*' && input[0].files[0] && !input[0].files[0].type.match('image.*')) {
                        input.addClass('is-invalid');
                        input.next('.invalid-feedback').text('Please upload an image file');
                        return;
                    }

                    // For PDF files in Aadhaar upload
                    if (input.attr('accept') === 'image/*,.pdf' && input[0].files[0] &&
                        !input[0].files[0].type.match('image.*') &&
                        !input[0].files[0].name.toLowerCase().endsWith('.pdf')) {
                        input.addClass('is-invalid');
                        input.next('.invalid-feedback').text('Please upload an image or PDF file');
                        return;
                    }

                    // If all validations pass
                    input.removeClass('is-invalid');
                    input.next('.custom-file-label').html(fileName);

                    if (input[0].files[0]) {
                        const fileSize = (input[0].files[0].size / 1024 / 1024).toFixed(2);
                        $('#' + infoId).html(`<i class="fas fa-check-circle text-success"></i> ${fileName} (${fileSize} MB)`).show();
                    } else {
                        $('#' + infoId).hide();
                    }
                });
            });
    </script>
