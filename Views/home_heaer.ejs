<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LearnSphere Header</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --learnsphere-primary: #6c63ff;
            --learnsphere-secondary: #9089ff;
            --learnsphere-accent: #ff6584;
            --learnsphere-dark: #2d3748;
            --learnsphere-light: #f7fafc;
            --learnsphere-bg: #ffffff;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Nunito Sans', sans-serif;
        }

        @import url('https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@400;600;700;800&display=swap');

        .learnsphere-header {
            background: var(--learnsphere-bg);
            color: var(--learnsphere-dark);
            padding: 1.25rem 0;
            position: sticky;
            top: 0;
            width: 100%;
            z-index: 1000;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        .learnsphere-header.scrolled {
            padding: 0.75rem 0;
            backdrop-filter: blur(8px);
            background: rgba(255, 255, 255, 0.9);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border-bottom: none;
        }

        .learnsphere-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 2.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .learnsphere-brand {
            display: flex;
            align-items: center;
            gap: 1rem;
            text-decoration: none;
            position: relative;
        }

        .learnsphere-logo-wrapper {
            position: relative;
            width: 44px;
            height: 44px;
            transition: transform 0.3s ease;
        }

        .learnsphere-logo-bg {
            position: absolute;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, var(--learnsphere-primary), var(--learnsphere-secondary));
            border-radius: 12px;
            transform: rotate(5deg);
            opacity: 0.9;
        }

        .learnsphere-logo-icon {
            position: absolute;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
            color: white;
            font-size: 1.4rem;
            transform: rotate(-5deg);
        }

        .learnsphere-brand-name {
            font-weight: 800;
            font-size: 1.7rem;
            color: var(--learnsphere-dark);
            letter-spacing: -0.5px;
            position: relative;
        }

        .learnsphere-brand-name span {
            color: var(--learnsphere-primary);
        }

        .learnsphere-nav-toggle {
            display: none;
            background: none;
            border: none;
            color: var(--learnsphere-dark);
            font-size: 1.6rem;
            cursor: pointer;
            transition: all 0.3s;
            z-index: 1001;
        }

        .learnsphere-nav-toggle:hover {
            color: var(--learnsphere-primary);
        }

        .learnsphere-nav-menu {
            display: flex;
            gap: 2.25rem;
        }

        .learnsphere-nav-link {
            color: var(--learnsphere-dark);
            text-decoration: none;
            font-weight: 600;
            font-size: 1.05rem;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.6rem;
            padding: 0.6rem 0;
            position: relative;
        }

        .learnsphere-nav-link:hover {
            color: var(--learnsphere-primary);
        }

        .learnsphere-nav-link::before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 3px;
            background: var(--learnsphere-accent);
            border-radius: 3px;
            transition: width 0.3s ease;
        }

        .learnsphere-nav-link:hover::before {
            width: 80%;
        }

        .learnsphere-nav-icon {
            font-size: 1.1rem;
            transition: transform 0.3s ease;
        }

        .learnsphere-nav-link:hover .learnsphere-nav-icon {
            transform: translateY(-3px);
        }

        @media (max-width: 768px) {
            .learnsphere-container {
                padding: 0 1.5rem;
            }

            .learnsphere-nav-toggle {
                display: block;
            }

            .learnsphere-nav-menu {
                position: fixed;
                top: 0;
                left: -100%;
                width: 85%;
                max-width: 350px;
                height: 100vh;
                background: white;
                flex-direction: column;
                padding: 6rem 2rem 2rem;
                gap: 1.75rem;
                transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
                box-shadow: 16px 0 48px rgba(0, 0, 0, 0.1);
            }

            .learnsphere-nav-menu.active {
                left: 0;
            }

            .learnsphere-brand-name {
                font-size: 1.5rem;
            }

            .learnsphere-logo-wrapper {
                width: 38px;
                height: 38px;
            }
        }

        @media (max-width: 480px) {
            .learnsphere-container {
                padding: 0 1.25rem;
            }

            .learnsphere-brand-name {
                font-size: 1.3rem;
            }
        }
    </style>
</head>

<body>
    <header class="learnsphere-header">
        <div class="learnsphere-container">
            <a href="/pragatischolarship" class="learnsphere-brand">
                <div class="learnsphere-logo-wrapper">
                    <div class="learnsphere-logo-bg"></div>
                    <div class="learnsphere-logo-icon">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                </div>
                <span class="learnsphere-brand-name">Pragati <span>Scholarship</span></span>
            </a>

            <button class="learnsphere-nav-toggle" id="learnsphereNavToggle">
                <i class="fas fa-bars"></i>
            </button>

            <nav class="learnsphere-nav-menu" id="learnsphereNavMenu">
                <a href="/pragatischolarship" class="learnsphere-nav-link">
                    <i class="fas fa-home learnsphere-nav-icon"></i> Home
                </a>
                <a href="#" class="learnsphere-nav-link">
                    <i class="fas fa-book-open learnsphere-nav-icon"></i> Courses
                </a>
                <a href="#" class="learnsphere-nav-link">
                    <i class="fas fa-chalkboard-teacher learnsphere-nav-icon"></i> Instructors
                </a>
                <a href="#" class="learnsphere-nav-link">
                    <i class="fas fa-graduation-cap learnsphere-nav-icon"></i> Degrees
                </a>
                <a href="#" class="learnsphere-nav-link">
                    <i class="fas fa-user learnsphere-nav-icon"></i> My Learning
                </a>
            </nav>
        </div>
    </header>

    <script>
        const navToggle = document.getElementById('learnsphereNavToggle');
        const navMenu = document.getElementById('learnsphereNavMenu');

        navToggle.addEventListener('click', () => {
            navMenu.classList.toggle('active');
            navToggle.innerHTML = navMenu.classList.contains('active') ?
                '<i class="fas fa-times"></i>' : '<i class="fas fa-bars"></i>';
            document.body.style.overflow = navMenu.classList.contains('active') ? 'hidden' : '';
        });

        const navLinks = document.querySelectorAll('.learnsphere-nav-link');
        navLinks.forEach(link => {
            link.addEventListener('click', () => {
                navMenu.classList.remove('active');
                navToggle.innerHTML = '<i class="fas fa-bars"></i>';
                document.body.style.overflow = '';
            });
        });

        const header = document.querySelector('.learnsphere-header');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 30) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });

        const logoWrapper = document.querySelector('.learnsphere-logo-wrapper');
        logoWrapper.addEventListener('mouseenter', () => {
            logoWrapper.style.transform = 'rotate(5deg) scale(1.1)';
        });
        logoWrapper.addEventListener('mouseleave', () => {
            logoWrapper.style.transform = 'rotate(0) scale(1)';
        });
    </script>
</body>

</html>