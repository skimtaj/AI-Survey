    <script>
        // Custom Cursor Effect
        const cursor = document.querySelector('.cursor');
        const cursorFollower = document.querySelector('.cursor-follower');

        document.addEventListener('mousemove', (e) => {
            cursor.style.left = e.clientX + 'px';
            cursor.style.top = e.clientY + 'px';

            setTimeout(() => {
                cursorFollower.style.left = e.clientX + 'px';
                cursorFollower.style.top = e.clientY + 'px';
            }, 100);
        });

        // Interactive elements cursor effect
        const interactiveElements = document.querySelectorAll('a, button, input, textarea, select, label[for]');

        interactiveElements.forEach(el => {
            el.addEventListener('mouseenter', () => {
                cursor.style.transform = 'translate(-50%, -50%) scale(1.5)';
                cursor.style.opacity = '0.5';
                cursorFollower.style.transform = 'translate(-50%, -50%) scale(1.2)';
            });

            el.addEventListener('mouseleave', () => {
                cursor.style.transform = 'translate(-50%, -50%) scale(1)';
                cursor.style.opacity = '0.2';
                cursorFollower.style.transform = 'translate(-50%, -50%) scale(1)';
            });
        });

        // Form navigation
        let currentSection = 'personalInfo';
        const totalSections = 6; // personal info + 5 questions

        function updateProgress(current) {
            const progressPercentage = (current / 6) * 100;
            document.getElementById('progressBar').style.width = `${progressPercentage}%`;

            const steps = document.querySelectorAll('.progress-step');
            steps.forEach((step, index) => {
                step.classList.remove('active', 'completed');
                if (index + 1 === current) {
                    step.classList.add('active');
                } else if (index + 1 < current) {
                    step.classList.add('completed');
                }

                // Update connecting lines
                if (index + 1 < current) {
                    step.nextElementSibling?.classList.add('completed');
                }
            });
        }

        function nextSection(current, next) {
            if (validateSection(current)) {
                document.getElementById(current).classList.remove('active');
                document.getElementById(next).classList.add('active');
                currentSection = next;
                const sectionNumber = getSectionNumber(next);
                updateProgress(sectionNumber);
                document.querySelector('.form-section').scrollIntoView({ behavior: 'smooth', block: 'start' });
            }
        }

        function prevSection(current, prev) {
            document.getElementById(current).classList.remove('active');
            document.getElementById(prev).classList.add('active');
            currentSection = prev;
            const sectionNumber = getSectionNumber(prev);
            updateProgress(sectionNumber);
            document.querySelector('.form-section').scrollIntoView({ behavior: 'smooth', block: 'start' });
        }

        function getSectionNumber(sectionId) {
            const sections = ['personalInfo', 'question1', 'question2', 'question3', 'question4', 'question5'];
            return sections.indexOf(sectionId) + 1;
        }

        function validateSection(sectionId) {
            const section = document.getElementById(sectionId);
            const inputs = section.querySelectorAll('[required]');
            let isValid = true;

            // Reset all error states first
            section.querySelectorAll('.form-group').forEach(group => {
                group.classList.remove('invalid');
            });

            inputs.forEach(input => {
                const formGroup = input.closest('.form-group');

                if (input.type === 'radio') {
                    const name = input.name;
                    const checked = section.querySelector(`input[name="${name}"]:checked`);
                    if (!checked) {
                        isValid = false;
                        const radioGroup = document.querySelector(`.boolean-options[id="${name}-options"]`);
                        if (radioGroup) {
                            radioGroup.closest('.form-group').classList.add('invalid');
                        }
                    }
                } else {
                    if (!input.value.trim()) {
                        isValid = false;
                        if (formGroup) {
                            formGroup.classList.add('invalid');
                        }
                    }
                }
            });

            return isValid;
        }

        // Initialize progress bar
        updateProgress(1);

        // Header scroll effect
        window.addEventListener('scroll', function () {
            const header = document.getElementById('mainHeader');
            if (window.scrollY > 50) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });

        // Real-time validation for text inputs
        document.querySelectorAll('input[type="text"], input[type="email"], textarea').forEach(input => {
            input.addEventListener('input', function () {
                const formGroup = this.closest('.form-group');
                if (this.value.trim()) {
                    formGroup.classList.remove('invalid');
                }
            });
        });

        // Real-time validation for radio buttons
        document.querySelectorAll('.boolean-options').forEach(group => {
            const inputs = group.querySelectorAll('input[type="radio"]');
            inputs.forEach(input => {
                input.addEventListener('change', function () {
                    const formGroup = group.closest('.form-group');
                    formGroup.classList.remove('invalid');
                });
            });
        });

        // Real-time validation for select
        document.querySelectorAll('select').forEach(select => {
            select.addEventListener('change', function () {
                const formGroup = this.closest('.form-group');
                if (this.value) {
                    formGroup.classList.remove('invalid');
                }
            });
        });
    </script>
